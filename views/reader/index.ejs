<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head', {title:'Panda Coder'}) %>
  </head>
  <body>
    <%- include('../partials/header') %>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
            <div class="recent-article-container"><h1 id="recent-articles">Recent Articles</h1></div>
          </div>
          <script src="libs/fitty.min.js"></script>
          <script>
            fitty('#recent-articles')
          </script>

          <div class="grid row row-gap-4">
            <% articles.forEach(function(article){ %>
            <div class="col-sm-6">
              <div class="card">
                <div class="card-body">
                  <p class="card-text"><small class="text-muted"><%= article.datetime %> </small></p>
                  <h5 class="card-title"><%= article.title %></h5>
                  <p class="card-text">
                    <%= article.content %>
                  </p>
                  <a href=<%= article.url %> class="btn btn-primary">Read article</a>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
    <%- include('../partials/footer') %>
  </body>
</html>
