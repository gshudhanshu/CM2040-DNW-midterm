<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head', {blog_settings}) %>
  </head>
  <body>
    <%- include('../partials/header', {blog_settings}) %>
    <div class="container wrapper">
      <div class="row">
        <div class="col-md-12">
          <div class="recent-article-container">
            <h1 id="recent-articles" class="fit">Recent Articles</h1>
          </div>

          <script src="/libs/fitty.min.js"></script>
          <script>
            fitty('#recent-articles')
          </script>
          <div class="grid row row-gap-4">
            <% articles.forEach(function(article){ %>
            <div class="col-sm-6">
              <div class="card">
                <div class="card-body">
                  <p class="card-text">
                    <small class="text-muted"
                      >Datetime: <%= article.article_published_on %> by <%=
                      article.article_author %>
                    </small>
                  </p>
                  <h5 class="card-title"><%= article.article_title %></h5>
                  <p class="card-text"><%= article.article_subtitle %></p>
                  <a
                    href="/article/<%= article.article_id %>"
                    class="btn btn-read-article"
                    >Read article</a
                  >
                </div>
              </div>
            </div>
            <% }) %> <% if(articles.length === 0){ %>
            <h3 data-bs-theme="dark" class="text-center">
              Sorry, No articles has been published!
            </h3>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <%- include('../partials/footer', {blog_settings}) %>
  </body>
</html>
